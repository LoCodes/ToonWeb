


<%= form_with model: [@genre, @anime] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :content %>
    <%= f.text_area :content %><br><br>

    <%= f.hidden_field :user_id, value: current_user.id %>
    

    <% if @genre %>
        Genre: <%= f.label @genre.name %><br>
        
        <%= f.hidden_field :genre_id, value: @genre.id %>       
       
    <% else %>    
        <h4> Add the Genre </h4> 
        <%= f.fields_for :genre do |g| %> 
            <%= g.label :genre_name %>:
            <%= g.text_field :name %>
        <% end %><br>       
            or <br>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: 'Select a Genre'}) %><br>

    <% end %>


    <%= f.submit %>



<% end %>