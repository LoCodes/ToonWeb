<h1>Animes#new</h1>
<p>Find me in app/views/animes/new.html.erb</p>

<h1> New Post </h1>



<h1> Add Your Favorite Anime/Cartoon! </h1>

<%= form_with model: @anime do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :content %>
    <%= f.text_area :content %><br><br>



    <h4> And Add the Genre </h4> 

    <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
    <%= f.fields_for :genre do |g| %>
        
        <%= g.label :name %>
        <%= g.text_field :name %>


    <% end %>


    <%= f.submit %>



<% end %>


